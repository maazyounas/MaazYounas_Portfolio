{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/api/admin/:action",
            "destination": "/api/admin?action=:action"
        },
        {
            "source": "/api/admin/:action/:id",
            "destination": "/api/admin?action=:action&id=:id"
        },
        {
            "source": "/api/visitors",
            "destination": "/api/visitors"
        },
        {
            "source": "/api/projects/:id/view",
            "destination": "/api/projects?id=:id&action=view"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}